[Unit]
Description=redis_exporter - Exporter for machine metrics.
Documentation=https://github.com/William-Yeh/ansible-prometheus
After=network.target

[Service]
Type=simple

PIDFile={{ prometheus_pid_path }}/redis_exporter.pid

User={{ prometheus_user }}
Group={{ prometheus_group }}

{% if prometheus_redis_exporter_opts is defined %}
ExecStart={{ prometheus_redis_exporter_daemon_dir }}/redis_exporter  {{ prometheus_redis_exporter_opts }} 2>&1 1>{{ prometheus_log_path }}/redis_exporter.log
{% else %}
ExecStart={{ prometheus_redis_exporter_daemon_dir }}/redis_exporter 2>&1 1>{{ prometheus_log_path }}/redis_exporter.log
{% endif %}

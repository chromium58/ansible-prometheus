[Unit]
Description=redis_exporter - Exporter for machine metrics.
Documentation=https://github.com/William-Yeh/ansible-prometheus
After=network.target

[Service]
Type=simple

#ExecStartPre=/bin/sh -c  " mkdir -p '{{ prometheus_pid_path }}' '{{ prometheus_log_path }}' "
#ExecStartPre=/bin/sh -c  " chown -R {{ prometheus_user }} '{{ prometheus_pid_path }}' '{{ prometheus_log_path }}' "
#PIDFile={{ prometheus_pid_path }}/redis_exporter.pid


User={{ prometheus_user }}
Group={{ prometheus_group }}

{% if prometheus_redis_exporter_opts is defined %}
ExecStart={{ prometheus_redis_exporter_daemon_dir }}/redis_exporter  {{ prometheus_redis_exporter_opts }}
{% else %}
ExecStart={{ prometheus_redis_exporter_daemon_dir }}/redis_exporter
{% endif %}

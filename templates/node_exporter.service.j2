[Unit]
Description=node_exporter - Exporter for machine metrics.
Documentation=https://github.com/William-Yeh/ansible-prometheus
After=network.target

[Service]
Type=simple

PIDFile={{ prometheus_pid_path }}/node_exporter.pid

User={{ prometheus_user }}
Group={{ prometheus_group }}

{% if prometheus_node_exporter_opts is defined %}
ExecStart={{ prometheus_node_exporter_daemon_dir }}/node_exporter  {{ prometheus_node_exporter_opts }} 2>&1 1>{{ prometheus_log_path }}/node_exporter.log
{% else %}
ExecStart={{ prometheus_node_exporter_daemon_dir }}/node_exporter 2>&1 1>{{ prometheus_log_path }}/node_exporter.log
{% endif %}

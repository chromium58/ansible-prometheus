[Unit]
Description=blackbox_exporter - Exporter for machine metrics.
Documentation=https://github.com/William-Yeh/ansible-prometheus
After=network.target

[Service]
Type=simple

#ExecStartPre=/bin/sh -c  " mkdir -p '{{ prometheus_pid_path }}' '{{ prometheus_log_path }}' "
#ExecStartPre=/bin/sh -c  " chown -R {{ prometheus_user }} '{{ prometheus_pid_path }}' '{{ prometheus_log_path }}' "
#PIDFile={{ prometheus_pid_path }}/blackbox_exporter.pid


User={{ prometheus_user }}
Group={{ prometheus_group }}

{% if prometheus_blackbox_exporter_opts is defined %}
ExecStart={{ prometheus_blackbox_exporter_daemon_dir }}/blackbox_exporter -config.file={{ prometheus_config_path }}/blackbox.yml  {{ prometheus_blackbox_exporter_opts }}
{% else %}
ExecStart={{ prometheus_blackbox_exporter_daemon_dir }}/blackbox_exporter -config.file={{ prometheus_config_path }}/blackbox.yml
{% endif %}
